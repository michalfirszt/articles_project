<p>
<strong>Your email:</strong>
<%= current_user.email%>
</p>

<br>

<h1>Your articles:</h1>

<br>

<% @articles.each do |article|%>
	<p>
	  <strong>Title:</strong>
	  <%= article.title %>
	</p>

	<p>
	  <strong>Description:</strong>
	  <%= article.description %>
	</p>
	<p>
		<%= link_to 'Show', article %>
        <%= link_to 'Edit', edit_article_path(article) %>
        <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %>
	</p>
<hr>
<% end %>


